@model IEnumerable<MyBlog.Core.Models.Role>

@{
    ViewData["Title"] = "Управление ролями";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user-tag"></i> Управление ролями</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Добавить роль
    </a>
</div>

<div class="row">
    @foreach (var role in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@role.Name</h5>
                    <span class="badge badge-info">@role.Users.Count пользователей</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@role.Description</p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="btn-group w-100">
                        <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4><i class="fas fa-info-circle"></i> Роли не найдены</h4>
        <p>Создайте первую роль для системы!</p>
        <a asp-action="Create" class="btn btn-primary">Создать роль</a>
    </div>
}