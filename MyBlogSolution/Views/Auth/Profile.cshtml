@model MyBlog.Core.Models.User

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-user-circle"></i> Мой профиль</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <div class="mb-3">
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-3x text-secondary"></i>
                            </div>
                        </div>
                        <h5>@(Model.FirstName ?? "Имя") @(Model.LastName ?? "Не указано")</h5>
                        <p class="text-muted">@Model.Email</p>

                        <div class="mt-3">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge badge-primary mb-1">@role.Name</span>
                            }
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-primary">@Model.Articles.Count</h5>
                                        <p class="card-text">Статей</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body text-center">
                                        <h5 class="card-title text-primary">@Model.Comments.Count</h5>
                                        <p class="card-text">Комментариев</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-info-circle"></i> Информация</h6>
                            </div>
                            <div class="card-body">
                                <table class="table table-borderless">
                                    <tr>
                                        <td width="30%"><strong>Email:</strong></td>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Имя:</strong></td>
                                        <td>@(Model.FirstName ?? "Не указано")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Фамилия:</strong></td>
                                        <td>@(Model.LastName ?? "Не указано")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Дата регистрации:</strong></td>
                                        <td>@Model.RegisteredAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Articles" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Назад к статьям
                            </a>
                            <a asp-controller="Auth" asp-action="EditProfile" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Редактировать профиль
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Последние статьи пользователя -->
        @if (Model.Articles.Any())
        {
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-newspaper"></i> Мои последние статьи</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var article in Model.Articles.OrderByDescending(a => a.CreatedAt).Take(5))
                        {
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@article.Title</h6>
                                    <small class="text-muted">@article.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="mb-1">@(article.Content.Length > 100 ? article.Content.Substring(0, 100) + "..." : article.Content)</p>
                                <small class="text-muted">
                                    <i class="far fa-comments"></i> @article.Comments.Count комментариев
                                    @if (article.Tags.Any())
                                    {
                                        <span class="ml-2">
                                            @foreach (var tag in article.Tags.Take(3))
                                            {
                                                <span class="badge badge-secondary">#@tag.Name</span>
                                            }
                                        </span>
                                    }
                                </small>
                            </a>
                        }
                    </div>
                    @if (Model.Articles.Count > 5)
                    {
                        <div class="text-center mt-3">
                            <a asp-controller="Articles" asp-action="Index" class="btn btn-outline-primary btn-sm">
                                Показать все статьи (@Model.Articles.Count)
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="card mt-4">
                <div class="card-body text-center">
                    <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                    <h5>У вас пока нет статей</h5>
                    <p class="text-muted">Создайте свою первую статью и поделитесь знаниями с сообществом!</p>
                    <a asp-controller="Articles" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Создать первую статью
                    </a>
                </div>
            </div>
        }
    </div>
</div>