@{
    ViewData["Title"] = "Создание тега";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-plus"></i> Создание нового тега</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="name" class="font-weight-bold">Название тега:</label>
                        <input type="text" id="name" name="name" class="form-control"
                               placeholder="Введите название тега (например: C#, ASP.NET, Programming)" required />
                        <small class="form-text text-muted">Тег будет отображаться как #Название</small>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Создать тег
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Назад к списку
                        </a>
                    </div>
                </form>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3">
                        <h5><i class="fas fa-exclamation-triangle"></i> Ошибки:</h5>
                        @Html.ValidationSummary()
                    </div>
                }
            </div>
        </div>
    </div>
</div>