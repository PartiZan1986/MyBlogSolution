@model IEnumerable<MyBlog.Core.Models.Article>

@{
    ViewData["Title"] = "Статьи";
}

<h2>Статьи</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новую статью</a>
</p>

<div class="articles-list">
    @foreach (var article in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">@article.Content.Substring(0, Math.Min(article.Content.Length, 200))...</p>
                <p class="text-muted">
                    Автор: @article.Author?.FirstName @article.Author?.LastName |
                    Дата: @article.CreatedAt.ToString("dd.MM.yyyy") |
                    Комментарии: @article.Comments.Count
                </p>
                <div>
                    @foreach (var tag in article.Tags)
                    {
                        <span class="badge bg-secondary">@tag.Name</span>
                    }
                </div>
                <div class="mt-2">
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-info btn-sm">Читать</a>
                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger btn-sm">Удалить</a>
                </div>
            </div>
        </div>
    }
</div>