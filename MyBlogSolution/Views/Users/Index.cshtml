@model IEnumerable<MyBlog.Core.Models.User>

<h2>Пользователи</h2>

<p>
    <a asp-action="Register">Создать нового пользователя</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Дата регистрации</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.RegisteredAt.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
